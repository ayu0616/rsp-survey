{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "components/*": ["./components/*"],
            "pages/*": ["./pages/*"],
            "styles/*": ["./styles/*"],
            "public/*": ["./public/*"],
            "constants/*": ["./constants/*"],
            "util/*": ["./util/*"]
            // "functions/*": ["./functions/*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/a"],
    "exclude": ["node_modules"]
}
